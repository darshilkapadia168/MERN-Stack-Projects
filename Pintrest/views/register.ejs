<%- include('partials/header') %>
<div class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw] bg-white px-[35px] py-10 rounded-[30px]">
        <h1 class="text-3xl mb-10 tracking-tight font-semibold text-zinc-700 text-center capitalize leading-none">Create New Account.</h1>
        <form action="/register" method="post">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="Name">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
            <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
            <p class="text-xs font-semibold mt-7 w-3/4 mx-auto text-center text-zinc-500">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
        </form>
        <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account.</a>
    </div>
</div>
<%- include('partials/footer') %>