<%- include('partials/header') %>
        <div class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1699491076670-7e7cb2fd0f0a?q=80&w=2032&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] ... flex items-center justify-center">
            <div class="w-[25vw] bg-white px-[35px] py-10 rounded-[30px]">
                <h1 class="text-3xl tracking-tight font-semibold text-zinc-700 text-center capitalize leading-none">Welcome to pintrest.</h1>
                <form action="/login" method="post">
                    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
                    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
                    <a class="mt-2 font-semibold text-zinc-500 inline-block " href="#">Forget Password ?</a>
                    <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
                    <p class="text-xs font-semibold mt-7 w-3/4 mx-auto text-center text-zinc-500">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
                </form>
                <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't Have An Account ?</a>
            </div>
        </div>
<%- include('partials/footer') %>
